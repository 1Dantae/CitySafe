{
  "expo": {
    "name": "CrimeLog",
    "slug": "CrimeLog",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": ".mobile/assets/images/icon.png",
    "scheme": "crimelog",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": ".mobile/assets/images/android-icon-foreground.png",
        "backgroundImage": ".mobile/assets/images/android-icon-background.png",
        "monochromeImage": ".mobile/assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": ".mobile/assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": ".mobile/assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photoPermission": "The app needs access to your photos in order for you to uploages images",
           "cameraPermission": "The app needs access to your photos in order for you to take photo",
           //"microphonePermission": "The app needs access to your photos in order for you to uploages videos"
        }

      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
